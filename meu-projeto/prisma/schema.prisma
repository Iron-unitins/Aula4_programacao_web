generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


// seção de dicadda para crioação das tabelas par aula 4
model Authors {
  id    String  @id @default(uuid())
  name  String  @unique
  books Books[]

  @@map("authors")
}

model Books {
  id        String @id @default(uuid())
  name      String @unique
  author_id String
  author Authors @relation(fields: [author_id], references:[id])

  @@map("books")
}

// seção de dicadda para crioação das tabelas par aula 5

model Courses{
  id String @id @default(uuid())
  name String @unique
  description String?
  duration Int
  created_at DateTime @default(now())
  modules CoursesModules[]
  @@map("courses")
}

model Modules{
  id String @id @default(uuid())
  name String @unique
  description String
  created_at DateTime @default(now())
  courses CoursesModules[]
  @@map("modules")
}

model CoursesModules{
  id String @id @default(uuid())
  
  course Courses @relation(fields: [fk_id_course], references: [id])
  module Modules @relation(fields: [fk_id_module], references: [id])
  fk_id_course String   
  fk_id_module String
  
  created_at DateTime @default(now())

  @@map("courses_modules")
}